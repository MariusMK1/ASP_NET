@model Author

<h2>Add Author</h2>

@using (Html.BeginForm("Add", "Author", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(a => a.Name)
        @Html.TextBoxFor(a => a.Name, "", new {@class = "form-control"})
    </div>
        
    <input class="btn btn-primary" type="submit" value="Submit"/>
}