@using Book_Author_Management.Dtos
@model List<AuthorDto>

    <h3>Authors</h3>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Books</th>
      <th scope="col">Remove</th>
    </tr>
  </thead>
  <tbody>
      @foreach (AuthorDto author in @Model)
     {
        <tr>
            <th scope="row"></th>
            <td>@author.Id</td>
            <td>@author.Name</td>
            <td>@foreach (Book book in @author.Books)
                {
                    @book.Name <a>;</a>
                }</td>
            <td>@Html.ActionLink("Remove", "Delete", "Author", new { Id = @author.Id})</td>
        </tr>
     }
  </tbody>
</table>