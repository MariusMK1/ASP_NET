@using Book_Author_Management.Dtos
@model BookDto

<h2>Add book</h2>

@using (Html.BeginForm("Add", "Book", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(a => a.Book.Name)
        @Html.TextBoxFor(a => a.Book.Name, "", new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Book.AuthorId)
        @Html.DropDownListFor(a => a.Book.AuthorId, new SelectList(@Model.Authors, "Id", "Name"), "", new {@class = "form-control"} )
    </div>
        
    <input class="btn btn-primary" type="submit" value="Submit"/>
}