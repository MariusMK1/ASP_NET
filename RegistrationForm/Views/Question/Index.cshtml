@using RegistrationForm.Dtos
@model List<QuestionDto>

        <h3>Registracijos požymiai</h3>

@using (Html.BeginForm("Update", "Question", FormMethod.Post))
{
    <form>
        <Table  style="width:100%">
            <tr>
                <th>Registracijos požymiai</th>
                <th>Reikšmė</th>
            </tr>
            @for (int i = 0; i < @Model.Count; i++)
            {
                <tr class="form-group">
                    <td>@Model[i].Text</td>
                    @Html.HiddenFor(x => @Model[i].Id)
                    <td>@Html.DropDownListFor(x => @Model[i].QuestionValueAnswerId, new SelectList(@Model[i].QuestionValues, "Id", "Text"))</td>
                </tr>
            }
        </Table>
        <button type="submit" class="btn btn-primary">Saugoti Pakeitimus</button>
    </form>
}